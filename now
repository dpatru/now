#!/bin/bash
# from https://news.ycombinator.com/item?id=7411120
NOW_FORMAT='%F %T'
NOW_FILE="$HOME/.now"
echo $(date +"$NOW_FORMAT") - "$@" >> $NOW_FILE
tail $NOW_FILE | nowtss


